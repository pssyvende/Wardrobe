@page "{id:int?}"
@model Wardrobe.Pages.ItemEditModel
@{
}
<div class="container">
    <div class="details row">
        <div class="col-md-7 col-lg-6 order-1 order-md-0">
            <div id="carousel" class="carousel slide d-none d-md-block" data-ride="carousel">
                <div class="carousel-inner">
                    @{
                        int counter = 0;
                    }
                    @foreach (var photo in Model.ItemProp.Photos)
                    {

                        if (counter == 0)
                        {
                            <div class="carousel-item active">
                                <img width="500" class="d-block w-100" src="@photo.Source">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img width="500" class="d-block w-100" src="@photo.Source">
                            </div>
                        }
                        counter++;
                    }
                </div>
                <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    @*<span class="sr-only">Previous</span>*@
                </a>
                <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    @*<span class="sr-only">Next</span>*@
                </a>
            </div>
            <div class="d-md-none mb-3">
                @foreach (var photo in Model.ItemProp.Photos)
                {
                    <div class="m-0 p-0">
                        <img class="d-block img-fluid" src="@photo.Source">
                    </div>
                }
            </div>
        </div>
        <div class="col-md-5 col-lg-6 text-center pt-5 order-0 order-md-1">
            <div class="admin mb-2">
                <!-- save icon -->
                <a href="##" onClick="history.go(-1)" class="p-1" data-bs-toggle="modal" data-bs-target="#cancelEditModal">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
                    </svg>
                    <p class="text-uppercase d-inline-block">Back to Item</p>
                </a>
            </div>

            
            <form method="post">
                <input type="hidden" name="itemID" value="@Model.Item.ItemID">
                <input type="hidden" name="itempropID" value="@Model.ItemProp.ItemPropID">
                <!--Item Name-->
                <div class="form-group row m-3">
                    <label id="#name" class="col-lg-3 col-xxl-2 col-form-label">Name</label>
                    <div class="col-lg-9 col-xxl-10">
                        <input id="name" name="name" value="@Model.Item.Name" class="form-control rounded-0" />
                    </div>
                </div>
                <!--Price-->
                <div class="form-group row m-3">
                    <label id="#price" class="col-lg-3 col-xxl-2 col-form-label">Price</label>
                    <div class="col-lg-9 col-xxl-10">
                        <input id="price" name="price" value="@Model.ItemProp.Price" class="form-control rounded-0" />
                    </div>
                </div>
                <!--Colour-->
                @*<div class="form-group row m-3">
                    <label id="#color" class="col-lg-3 col-xxl-2 col-form-label">Color</label>
                    <div class="col-lg-9 col-xxl-10">
                        <input type="color" id="color" name="color" value="@Model.ItemProp.Color" class="form-control h-100 rounded-0 p-0" />
                    </div>
                </div>*@
                <!--Description-->
                <div class="form-group row m-3">
                    <label id="#description" class="col-lg-3 col-xxl-2 col-form-label">Description</label>
                    <div class="col-lg-9 col-xxl-10">
                        <input id="description" name="description" value="@Model.Item.Description" class="form-control rounded-0" />
                    </div>
                </div>
                <div class="form-group mb-5">
                    <input type="submit" value="Save changes" class="btn btn-dark rounded-0" />
                </div>
            </form>

        </div>
    </div>
</div>